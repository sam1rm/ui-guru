<fieldset rad="2px" border="2px solid white" class="placeholder-stone-white">
	<label p="3px 15px" font-size="12" f-w="600" bg="white-25p" border-bottom="2px solid white" class="border-white border-2-bottom">{{title}}</label>
	<div>
		<textarea placeholder="{{placeholder}}" class="{{custom}}" p="10px 15px" font-size="16" bg="white-10p" color="white" border="0" rad="0"
			u on-mouseenter="p:[background:#777E93]"
			on-mouseleave="p:[background:#5D657E]"
			on-focus="p:[background:#ffffff, color:#757575]"
			on-blur="p:[background:#5D657E, color:#ffffff]"></textarea>
	</div>
</fieldset>
